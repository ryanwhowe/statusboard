{% extends "::base.html.twig" %}
{% block title %}Howe - Weather Test Page{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Weather Test Page</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title text-center">
                        <i class="fa fa-cloud fa-fw"></i> Weather
                    </div>
                </div>
                <div class="panel-body">
                    <div class="weather"></div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}

{% block style %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/WeatherInfo.js') }}"></script>
    <script>
        $(function () {
            $('.weather').WeatherInfo({baseUrl: "{{ baseUrl }}"});
        });
    </script>
{% endblock %}