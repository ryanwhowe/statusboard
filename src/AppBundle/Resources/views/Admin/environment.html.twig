{% extends "::base.html.twig" %}
{% block title %}Howe - Environment Test Page{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Environment Test Page</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title text-center">
                        <i class="fa fa-server fa-fw"></i> Environment
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Environment Type</th><th>Current</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for environment,active in environments %}
                        <tr><td>{{ environment }}</td><td>{% if active %}<i class="fa fa-check-circle-o fa-fw"></i>{% endif %}</td></tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}

{% block style %}
{% endblock %}
{% block javascripts %}
{% endblock %}