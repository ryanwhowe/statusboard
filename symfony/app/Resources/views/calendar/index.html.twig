{% extends 'base.html.twig' %}
{% block title %}Calendar List{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Calendar List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary" href="{{ path('admin_calendar_new') }}">Create a new event</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Type</th>
                        <th>Eventdate</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for calendar in calendars %}
                    <tr>
                        <td><a class="btn btn-info" href="{{ path('admin_calendar_show', { 'id': calendar.id }) }}">Show {{ calendar.id }}</a></td>
                        <td>{% if calendar.type == 1 %}Holiday{% elseif calendar.type == 2 %}PTO{% elseif calendar.type == 3 %}Sick{% elseif calendar.type == 4 %}National Holiday{% elseif calendar.type == 99 %}Pay Date{% endif %}</td>
                        <td>{% if calendar.eventDate %}{{ calendar.eventDate|date('Y-m-d') }}{% endif %}</td>
                        <td>
                            <a class="btn btn-warning" href="{{ path('admin_calendar_edit', { 'id': calendar.id }) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
