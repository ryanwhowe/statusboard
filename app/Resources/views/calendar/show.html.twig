{% extends 'base.html.twig' %}
{% block title %}Calendar Event{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Calendar Event</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ calendar.id }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{% if calendar.type == 1 %}Holiday{% elseif calendar.type == 2 %}PTO{% else %}Sick{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Eventdate</th>
                        <td>{% if calendar.eventDate %}{{ calendar.eventDate|date('Y-m-d') }}{% endif %}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary" href="{{ path('admin_calendar_index') }}">Back to the list</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-warning" href="{{ path('admin_calendar_edit', { 'id': calendar.id }) }}">Edit</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
        {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary" href="{{ path('admin_calendar_new') }}">Create a new event</a>
        </div>
    </div>

{% endblock %}
