{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Servers list</h1>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Disabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for server in servers %}
            <tr>
                <td><a href="{{ path('admin_server_show', { 'id': server.id }) }}">{{ server.id }}</a></td>
                <td>{{ server.name }}</td>
                <td>{% if server.isDisabled %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('admin_server_show', { 'id': server.id }) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('admin_server_edit', { 'id': server.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('admin_server_new') }}">Create a new server</a>

    </div>
{% endblock %}
