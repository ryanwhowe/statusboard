{% extends 'base.html.twig' %}

{% block body %}
    <h1>Server</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ server.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ server.name }}</td>
            </tr>
            <tr>
                <th>Isdisabled</th>
                <td>{% if server.isDisabled %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_server_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_server_edit', { 'id': server.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
